@page "/"

<PageTitle>Game Of Life</PageTitle>
<header>
    <body style="background-color: #87c7ff" ;>
    <h1>Welcome to Game Of Life!</h1>
    </body>
</header>
<body>
    <form @onsubmit="@GameHeight">
        <p>Before we start...</p>
        <p>Please enter the specifics of your game...</p>
        <label for="gameHeight">Height (between 1 and 50):</label>
        <input type="number" id="gameHeight" name="height" min="1" max="50" @bind="getGameHeight">
        <p></p>
        <label for="gameWidth">Width (between 1 and 50):</label>
        <input type="number" id="gameWidth" name="width" min="1" max="50" @bind="getGameWidth">
        <p></p>
        <label for="gameAliveCellsPercent">The Chance that a cell is alive (between 1 and 100):</label>
        <input type="number" id="gameAliveCellsPercent" name="aliveCellsPercent" min="1" max="100" @bind="getGameAliveCellsPercent">
        <p></p>
        <input type="submit" value="Submit">
    </form>
</body>
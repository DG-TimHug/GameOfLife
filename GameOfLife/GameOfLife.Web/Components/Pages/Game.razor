@page "/Game/{GameHeight:int}/{GameWidth:int}/{GameAliveCellsPercent:int}"

@if (board != null)
{
    <div>
        <div class="page-container">
            <div style="display:grid; width: auto; grid-template-columns:repeat(@GameWidth, 1fr);@GetGameTileStyle()"
                 @onclick="@(() => ToggleCell(row, column))" 
                 class="@(isGamePaused ? "cell-clickable" : "")">
                @for (var row = 0; row < board.PlayingField.GetLength(0); row++)
                {
                    for (var column = 0; column < board.PlayingField.GetLength(1); column++)
                    {
                        <div
                            style="background:lightblue; border:1px solid black; text-align:center; aspect-ratio: 1 / 1; @GetGameTileStyle() ">
                            @if (board.PlayingField[row, column])
                            {
                                <div class="cell-alive @row-@column"></div>
                            }
                            else
                            {
                                <div class="cell @row-@column"></div>
                            }
                        </div>
                    }
                }
            </div>
        </div>
        @if (!board.IsGameAlive())
        {
            <div class="game-over"><h1>Game Over</h1></div>
        }
        <div class="menu-overlay" @onmousemove="OnMouseMove" @onmouseup="EndDrag">
            <div class="simple-menu" style="top: @(menuY)px; left: @(menuX)px;">
                <div class="menu-header" @onmousedown="StartDrag">Game Menu</div>
                <div class="menu-content">
                    @if (isGamePaused)
                    {
                        <button @onclick="ResumeGame">▶ Play</button>
                    }
                    else
                    {
                        <button @onclick="PauseGame">⏸ Pause</button>
                    }
                    <button @onclick="ExitGame">Exit</button>

                    <button @onclick="RestartGame">Restart</button>
                </div>
            </div>
        </div>
    </div>
}
